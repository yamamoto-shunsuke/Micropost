<!DOCTYPE html>
<html>

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <%- include('header') %>
  </head>

  <body>
    <div class="mt-5">
      <div class="container">
        <div class="row">
          <%- include('partials/profile') %>
            <div class="col-sm-6">
              <% if(isotherspage){ %>
                <form action="/users/<%= page_location %>" method="post">
                  <% if(isfollow){ %>
                    <input class="btn btn-primary col-sm-12" type="submit" value="Remove" />
                    <% } else{ %>
                      <input class="btn btn-primary col-sm-12" type="submit" value="Follow" />
                      <% } %>
                </form>
                <br>
                <% } %>
                  <% if(contentList !==null) { %>
                    <% contentList.forEach(function(contentItem) { %>
                      <div class="border-bottom mb-3">
                        <div class="row">
                          <div class="col-sm-2">
                            <a href="/users/<%=user_id %>"> <img
                                src="https://ja.gravatar.com/userimage/198854425/da5b60637a0811fde3ed6b701c8473cd.png?size=60" />
                            </a>
                            <br>
                            <br>
                            <input class="btn btn-primary" type="submit" value="delete">
                          </div>
                          <div class="col-sm-10">
                            <h5><a href="/users/<%=user_id %>">
                                <%= user_name %>
                              </a></h5>
                            <p>
                              <%= contentItem.content %>
                            </p>
                            <p>
                              <font color="gray">Posted ago.</font>
                            </p>
                          </div>
                        </div>
                        <br>
                      </div>
                      <% }); %>
                        <% } %>
            </div>
        </div>
      </div>
    </div>
    </div>
    <%- include('partials/bootstrap.ejs'); %>
  </body>

</html>