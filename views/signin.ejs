<!DOCTYPE html>
<html lang="ja">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <%- include('header') %>
  </head>

  <body>
    <div class="border-bottom mb-5">
      <div class="container">
        <h1 style="text-align:center">
          <%= title %>
        </h1>
        <form method="POST" action="/accounts/signin">
          <div class="form-group">

            <label for="email" class="col-sm-8 col-form-label">
              <h4>Email</h4>
            </label>
            <input required type="text" id="email" name="email" class="col-sm-6 form-control" />

          </div>
          <div class="form-group">
            <div align="center">
              <label for="password" class="col-sm-8 col-form-label">
                <h4>Password</h4>
              </label>
              <input required type="password" id="password" name="password" class="col-sm-6 form-control" />
            </div>
          </div>
          <div class="form-group">
            <div class="col-form-label" align="center">
              <input type="submit" class="btn btn-primary col-sm-6" value="Sign in" />
            </div>
            <% if (message && message.length !==0) { %>
              <% for(let i of message) { %>
                <div class="alert alert-danger">
                  <%= i %>
                </div>
                <% } %>
                  <% } %>
        </form>
      </div>
    </div>
    <%- include('partials/bootstrap.ejs'); %>
  </body>

</html>